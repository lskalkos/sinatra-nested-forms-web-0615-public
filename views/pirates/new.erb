<%= erb :'layouts/_header' %>

<div class="container">
  <h1>Make your form here</h1>

  <form action="/pirates" method="POST">

    <h2>Pirate Info</h2>
    <label>Name</label>
    <input type="text" name="pirate[name]"/>
    <label>Weight</label>
    <input type="text" name="pirate[weight]"/>
    <label>Height</label>
    <input type="text" name="pirate[height]"/>

    <h2>Ship 1 Info</h2>

    <label>Name</label>
    <input type="text" name="ship[0][name]"/>
    <label>Type</label>
    <input type="text" name="ship[0][ship_type]"/>
    <label>Booty</label>
    <input type="text" name="ship[0][booty]"/>

    <h1>Ship 2 Info</h1>

    <label>Name</label>
    <input type="text" name="ship[1][name]"/>
    <label>Type</label>
    <input type="text" name="ship[1][ship_type]"/>
    <label>Booty</label>
    <input type="text" name="ship[1][booty]"/>
    <br/><br/>
    <button type="submit" id="submit">Submit</button>

  </form>
</div>

